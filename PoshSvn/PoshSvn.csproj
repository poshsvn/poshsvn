<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net4.7.2</TargetFramework>
    <Platforms>x64;</Platforms>
    <RuntimeIdentifier>win-x64</RuntimeIdentifier>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="SvnItem.format.ps1xml" />
    <None Remove="SvnLog.format.ps1xml" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="SharpSvn" Version="1.14003.272" />
    <PackageReference Include="PowerShellStandard.Library" Version="5.1.0.0" />
  </ItemGroup>

  <ItemGroup>
    <StaticFiles Include="PoshSvn.psd1" />
    <StaticFiles Include="SvnItem.format.ps1xml" />
    <StaticFiles Include="SvnLog.format.ps1xml" />
    <StaticFiles Include="SvnNotifyOutput.format.ps1xml" />
    <StaticFiles Include="SvnInfo.format.ps1xml" />
    <StaticFiles Include="SvnStatus.format.ps1xml" />
    <StaticFiles Include="..\Externals\CRT\x64\**">
      <Visible>false</Visible>
    </StaticFiles>
  </ItemGroup>

  <ItemGroup>
    <Content Include="@(StaticFiles)" CopyToOutputDirectory="PreserveNewest" />
  </ItemGroup>

</Project>
