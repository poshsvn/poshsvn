<Project>
 <PropertyGroup>
   <BaseIntermediateOutputPath>$(SolutionDir)\obj\$(Configuration)\$(MSBuildProjectName)\</BaseIntermediateOutputPath>
   <OutputPath>$(SolutionDir)\bin\$(Configuration)\</OutputPath>
   <OutDir>$(OutputPath)</OutDir>
   <IntDir>$(BaseIntermediateOutputPath)</IntDir>
   <ToolsDir>$(SolutionDir)bin\tools\</ToolsDir>
   <!--<UseCommonOutputDirectory>True</UseCommonOutputDirectory>-->
  </PropertyGroup>

  <PropertyGroup>
    <VCPkgLocalAppDataDisabled>true</VCPkgLocalAppDataDisabled>
    <VcpkgManifestRoot>$(SolutionDir)</VcpkgManifestRoot>
    <VcpkgTriplet>$(Platform)-windows-release</VcpkgTriplet>
    <VcpkgInstalledDir>$(VcpkgManifestRoot)\vcpkg_installed\$(PlatformTarget)\</VcpkgInstalledDir>
    <PackagesPath>$(VcpkgManifestRoot)vcpkg_installed\$(PlatformTarget)$(VcpkgTriplet)\</PackagesPath>
  </PropertyGroup>
</Project>
